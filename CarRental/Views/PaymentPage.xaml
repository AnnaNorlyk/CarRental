<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CarRental.ViewModels"
             x:Class="CarRental.Views.PaymentPage"
             >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="{Binding Name}" FontSize="24" />
            <Label Text="{Binding Price, StringFormat='Price: {0} DKK'}" />

            <Label Text="Phone number:" />
            <Entry Placeholder="+4512345678" Text="{Binding Phone}" Keyboard="Telephone" />

            <Label Text="Start date:" />
            <DatePicker Date="{Binding StartDate}" />

            <Label Text="End date:" />
            <DatePicker Date="{Binding EndDate}" />

            <Button Text="Confirm Booking" Command="{Binding ConfirmBookingCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>