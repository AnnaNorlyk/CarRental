<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CarRental.ViewModels"
             x:Class="CarRental.Views.DeliverKeyPage"
             x:DataType="vm:DeliverKeyViewModel">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Ready to return your key?" FontSize="24" HorizontalOptions="Center" />

        <Button 
            Text="Close Locker" 
            Command="{Binding UnlockCommand}" 
            BackgroundColor="DarkRed" 
            TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>